<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.wetherforcastapp.ui.home.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/favFragment"
        android:name="com.example.wetherforcastapp.ui.favorite.view.FavFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_fav" >
        <action
            android:id="@+id/action_favFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_favFragment_to_favDetailsFragment"
            app:destination="@id/favDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/alarmFragment"
        android:name="com.example.wetherforcastapp.ui.alarm.view.alarmFragment"
        android:label="Alarms"
        tools:layout="@layout/fragment_alarm" />
    <fragment
        android:id="@+id/sittingFragment"
        android:name="com.example.wetherforcastapp.ui.sitting.view.SittingFragment"
        android:label="Sitting"
        tools:layout="@layout/fragment_sitting" />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.wetherforcastapp.ui.favorite.view.MapsFragment"
        android:label="Maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/favDetailsFragment"
        android:name="com.example.wetherforcastapp.ui.favorite.view.FavDetailsFragment"
        android:label="Favorite Weather"
        tools:layout="@layout/fragment_fav_details" />
</navigation>